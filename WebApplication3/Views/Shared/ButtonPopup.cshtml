@model WebApplication3.Models.ButtonModel

<div>
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title" id="myModalLabel">Edit button</h4>
    </div>
    <div class="modal-body">
        @using (Html.BeginForm(WebApplication3.Common.Constants.REDIS_KEY_BUTTON, WebApplication3.Common.Constants.CONTROLS_VIEW_NAME, FormMethod.Post))
        {
            <table>
                <tr>
                    <td class="bottompadding rightpadding">BorderColor</td>
                    <td class="bottompadding">@Html.TextBoxFor(x => x.BorderColor)</td>
                </tr>
                <tr>
                    <td class="bottompadding">TextColor</td>
                    <td class="bottompadding">@Html.TextBoxFor(x => x.TextColor)</td>
                </tr>
                <tr>
                    <td>Text</td>
                    <td>@Html.TextBoxFor(x => x.Text)</td>
                </tr>
            </table>
            <input type="submit" value="Save changes" class="saveButton" />
        }
    </div>
</div>
